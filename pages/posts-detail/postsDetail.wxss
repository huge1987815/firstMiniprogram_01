.container{
  display: flex;
  flex-direction: column;  
}

.head-image{
  width:100%;
  height: 460rpx;
}

.author-date{
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  margin-left: 30rpx;
  align-items: center;
}

.avatar{
  width:64rpx;
  height: 64rpx;
  border-radius: 50%;
}

.author{
  font-size: 24rpx;
  font-weight: 300;
  margin-left: 20rpx;
  color:#666;
}

.const-text{
  font-size: 24rpx;
  color:#999;
  margin-left: 30rpx;
}

.date{
  font-size: 24rpx;
  color:#999;
  margin-left: 20rpx;
  vertical-align: middle;
}

.title{
  font-size: 30rpx;
  font-weight: bold;
  columns: #4b556c;
  margin-left: 35rpx;
  margin-top: 30rpx;
  letter-spacing: 2px;
}

.tool{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.circle{
  display: flex;
  flex-direction: row;
  width: 660rpx;
  justify-content: flex-end;
}

.circle-img{
  width:90rpx;
  height: 90rpx;
  margin-left: 20rpx;
}
.horizon{
  width:660rpx;
  height: 1px;
  background-color: #e5e5e5;
  position: absolute;
  z-index: -99;
}

.detail{
  color:#666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}

/* 音乐图片 */
.audio{
  width:102rpx;
  height:110rpx;
  position:absolute;
  left:50%;
  margin-left: -51rpx;
  top:185rpx;
  opacity: 0.2;
}